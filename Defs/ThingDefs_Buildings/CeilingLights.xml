<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <DesignatorDropdownGroupDef>
    <defName>CeilingLights</defName>
  </DesignatorDropdownGroupDef>
  <ThingDef Abstract="True" Name="CeilingLightBase" ParentName="BuildingBase">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>CeilingLight</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <uiIconPath>CeilingLightIcon</uiIconPath>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <altitudeLayer>Blueprint</altitudeLayer>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>35</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <Steel>25</Steel>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>15</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <designationCategory>Furniture</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <clearBuildingArea>false</clearBuildingArea>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef Name="CeilingLight" ParentName="CeilingLightBase">
    <defName>Lighting_CeilingLight</defName>
    <label>ceiling light</label>
    <description>A ceiling light that emits comfortable, eye-friendly white light.</description>
    <uiIconPath>CeilingLightIcon</uiIconPath>
    <designationCategory>Furniture</designationCategory>
    <designatorDropdown>CeilingLights</designatorDropdown>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>21.9</glowRadius>
        <glowColor>(217,217,208,0)</glowColor>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="CeilingGrowLight" ParentName="CeilingLightBase">
    <defName>Lighting_CeilingGrowLight</defName>
    <label>ceiling grow light</label>
    <description>A ceiling light that sheds full spectrum light to grow plants and warm the skin. Wear sun lotion.</description>
    <uiIconPath>CeilingGrowIcon</uiIconPath>
    <designationCategory>Furniture</designationCategory>
    <designatorDropdown>CeilingLights</designatorDropdown>
    <statBases>
      <WorkToBuild>100</WorkToBuild>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <Gold>15</Gold>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Glower">
        <overlightRadius>16</overlightRadius>
        <glowRadius>20</glowRadius>
        <glowColor>(380,320,230,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>18</heatPerSecond>
        <heatPushMaxTemperature>30</heatPushMaxTemperature>
      </li>
    </comps>
    <specialDisplayRadius>13.9</specialDisplayRadius>
  </ThingDef>

  <ThingDef Name="CeilingLightDark" ParentName="CeilingLightBase">
    <defName>Lighting_CeilingLightDark</defName>
    <label>ceiling light dark</label>
    <description>A ceiling light that emits darklight.</description>
    <uiIconPath>CeilingLightIcon</uiIconPath>
    <designationCategory>Furniture</designationCategory>
    <designatorDropdown>CeilingLights</designatorDropdown>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>20</glowRadius>
        <glowColor>(78, 226, 229, 0)</glowColor>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
  </ThingDef>
</Defs>
